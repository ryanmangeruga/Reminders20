<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/add"
            android:layout_width="wrap_content"
            android:layout_height="81dp" android:id="@+id/ButtonAdd"
            android:layout_alignParentBottom="true" android:layout_marginBottom="23dp"
            android:visibility="visible" android:background="@android:color/holo_red_dark"
            android:layout_alignParentEnd="true" android:layout_marginEnd="32dp"/>
    <CalendarView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" android:id="@+id/calendarView"
            android:layout_centerHorizontal="true" android:layout_marginTop="16dp" android:minDate="01/01/2019"
            android:maxDate="12/31/2029"/>
</RelativeLayout>